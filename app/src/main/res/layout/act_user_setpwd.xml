<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <EditText
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon_act_user_setpass"
        android:drawableLeft="@drawable/icon_act_user_setpass"
        android:id="@+id/act_set_password_old_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/et_back"
        android:textColorHint="@color/text_black"
        android:hint="@string/act_set_password_old_pwd_et"
        android:inputType="textVisiblePassword"
        android:padding="10dp" />


    <EditText
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon_act_user_setpass"
        android:drawableLeft="@drawable/icon_act_user_setpass"
        android:id="@+id/act_set_password_new_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/et_back"
        android:hint="@string/act_set_password_new_pwd_et"
        android:inputType="textPassword"
        android:padding="10dp" />


    <EditText
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon_act_user_setpass"
        android:drawableLeft="@drawable/icon_act_user_setpass"
        android:id="@+id/act_set_password_new_pwd2_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/et_back"
        android:hint="@string/act_set_password_new_pwd2_tv"
        android:inputType="textPassword"
        android:padding="10dp" />

    <TextView
        android:id="@+id/act_set_pwd_is_ok_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#ff00ff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/user_setpwd_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/btn_back"
        android:text="@string/btn_ok" />

</LinearLayout>