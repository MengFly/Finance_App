<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <EditText
        style="@style/app_base_text.drawable.pass_et"
        android:id="@+id/act_set_password_old_pwd_et"
        android:hint="@string/act_set_password_old_pwd_et"
        android:inputType="textVisiblePassword" />

    <EditText
        style="@style/app_base_text.drawable.pass_et"
        android:id="@+id/act_set_password_new_pwd_et"
        android:hint="@string/act_set_password_new_pwd_et" />

    <EditText
        android:id="@+id/act_set_password_new_pwd2_tv"
        style="@style/app_base_text.drawable.pass_et"
        android:hint="@string/act_set_password_new_pwd2_tv" />

    <TextView
        android:id="@+id/act_set_pwd_is_ok_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#ff00ff"
        android:textSize="16sp" />

    <Button
        style="@style/app_base_btn.ok"
        android:id="@+id/user_setpwd_sure"
        android:layout_width="fill_parent" />

</LinearLayout>