<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/icon_user_back"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <Button
            android:id="@+id/act_login_regist_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/user_login_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/tv_back"
            android:gravity="center"
            android:text="@string/act_user_login_regist_tv"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/act_user_login_username_tv"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/act_login_user_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_back"
                android:hint="@string/user_login_name"
                android:inputType="text"
                android:padding="5dp"
                android:textColorHint="@color/lightGray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/act_user_login_password_tv"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/act_login_password_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_back"
                android:hint="@string/act_user_login_password_ev"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textColorHint="@color/lightGray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <Button
                android:id="@+id/act_login_no_login_btn"
                style="?android:attr/buttonBarStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_back"
                android:text="@string/act_user_login_nologin_btn" />

            <Button
                android:id="@+id/act_login_sure_btn"
                style="?android:attr/buttonBarStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_back"
                android:text="@string/act_user_login_login_btn" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>