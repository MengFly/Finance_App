<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_back"
        android:src="@drawable/ic_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="10dp"
            android:src="@mipmap/icon_app"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_icon" />

        <TextView
            android:id="@+id/tv_app_login_tip"
            android:layout_below="@id/iv_icon"
            android:padding="5dp"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:text="FinanceApp是一款专注于为您提供专业金融知识的App\n通过注册账号您可以记录您的观看记录并且可以定制自己的频道\n定制您感兴趣的信息"
            android:layout_width="match_parent"
            android:lineSpacingExtra="10dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_regist"
            android:layout_below="@id/tv_app_login_tip"
            android:text="@string/act_regist_title_tv"
            style="@style/btn"
            android:layout_width="match_parent" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/btn_regist"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_have_account"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:text="已有账户？"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_login"
                android:padding="5dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/app_theme_back"
                android:textSize="18sp"
                android:text="立即登陆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:text="跳过登陆"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:background="#36ffffff"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/tv_no_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TextView>

</FrameLayout>
</layout>