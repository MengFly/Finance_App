<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@mipmap/icon_app" />

            <TextView
                android:id="@+id/tv_app_login_tip"
                style="@style/text_label"
                android:layout_width="match_parent"
                android:layout_below="@id/iv_icon"
                android:layout_marginBottom="40dp"
                android:lineSpacingExtra="10dp"
                android:text="FinanceApp是一款专注于为您提供专业金融知识的App\n通过注册账号您可以记录您的观看记录并且可以定制自己的频道\n定制您感兴趣的信息"
                android:textColor="@color/color_text_main_light" />

            <Button
                android:id="@+id/btn_regist"
                style="@style/btn"
                android:layout_width="match_parent"
                android:layout_below="@id/tv_app_login_tip"
                android:text="@string/act_regist_title_tv" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_regist"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_have_account"
                    style="@style/text_label"
                    android:text="@string/have_account"
                    android:textColor="@color/color_text_main_light" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="立即登陆"
                    android:textColor="@color/app_theme_back"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_no_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:background="#36ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:text="跳过登陆"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </FrameLayout>
</layout>