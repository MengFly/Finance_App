<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--BaseButton-->
    <style name="app_base_btn">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_back</item>
        <item name="android:textColor">@color/color_text_main_light</item>
    </style>

    <!--DrawableBtn-->
    <style name="app_base_btn.drawable">
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <!--取消按钮-->
    <style name="app_base_btn.cancel">
        <item name="android:text">@string/btn_back</item>
    </style>

    <!--确定按钮-->
    <style name="app_base_btn.ok">
        <item name="android:text">@string/btn_ok</item>
    </style>

    <style name="MySpinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_margin">10dp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:dropDownVerticalOffset">10dip</item>
    </style>

    <!--整个应用的按钮类型-->
    <style name="btn">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/btn_body</item>
        <item name="android:textColor">@color/color_text_main_light</item>
        <item name="android:background">@drawable/btn_back</item>
    </style>

    <!--整个应用的按钮类型-->
    <style name="btn_flat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/btn_body</item>
        <item name="android:textColor">@color/btn_default_back</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="btn_float">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>