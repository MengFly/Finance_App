<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Base TextView(TextView and It's Child)-->
    <style name="app_base_text">
        <item name="android:inputType">text</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--drawable_editText-->
    <style name="app_base_text.drawable">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="app_base_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--App中的Root节点的LinearLayout的样式-->
    <style name="app_base_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--显示密码的editText-->
    <style name="app_base_text.drawable.pass_et">
        <item name="android:inputType">textPassword</item>
        <item name="android:drawableLeft">@drawable/icon_act_user_setpass</item>
        <item name="android:drawableStart">@drawable/icon_act_user_setpass</item>
    </style>

    <!--显示用户的EditText-->
    <style name="app_base_text.drawable.user_et">
        <item name="android:inputType">number</item>
        <item name="android:drawableLeft">@drawable/icon_act_user_user</item>
        <item name="android:drawableStart">@drawable/icon_act_user_user</item>
    </style>

    <!--用于作为标签的textView的样式-->
    <style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/color_text_second_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!--hint类型的TextView-->
    <style name="app_base_text.hint_tv">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_hint_color</item>
    </style>

    <!--用户输入框的统一类型-->
    <style name="et_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#aaa</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_text_main_dark</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--可点击的TextView-->
    <style name="app_base_text.clickable_tv">
        <item name="android:textColor">@color/text_link_color</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--User主界面的item-->
    <style name="main_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:background">@drawable/select_background</item>
    </style>
</resources>