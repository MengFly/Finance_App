<resources>

    <!--默认的style，为没有ActionBar的-->
    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>


    <!--带有ActionBar的style-->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/app_theme_back</item>
        <item name="colorPrimaryDark">@color/app_theme_back</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="actionBarSize">50dp</item>
        <item name="titleTextColor">#fff</item>
        <item name="colorAccent">@color/btn_default_back</item>

    </style>

    <!--dialog的类型-->
    <style name="MyDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
